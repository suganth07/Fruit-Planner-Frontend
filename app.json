{
  "expo": {
    "name": "Fruit Planner",
    "slug": "fruit-planner",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#6200ee"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.fruitplanner.app"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#6200ee"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.fruitplanner.app"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-font",
        {
          "fonts": ["./assets/fonts/MaterialIcons.ttf"]
        }
      ]
    ],
    "extra": {
      "EXPO_PUBLIC_API_BASE_URL": "http://192.168.1.2:3000/api",
      "EXPO_PUBLIC_ENV": "development"
    },
    "packagerOpts": {
      "host": "192.168.1.2"
    }
  }
}
